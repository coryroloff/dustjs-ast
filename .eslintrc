{
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "rules": {
        "indent": ["error", "tab"],
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", "always"],
        "space-before-blocks": ["error", "always"],
        "quotes": ["error", "double", {"allowTemplateLiterals": true}],
        "keyword-spacing": ["error", {"before": true, "after": true}],
        "eqeqeq": ["error", "always"]
    }
}
